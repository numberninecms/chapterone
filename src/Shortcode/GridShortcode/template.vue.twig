{% verbatim %}
<div
    class="container mx-auto grid gap-3"
    :class="[
        {
            'p-5': !(children && children.length > 0),
        },
        'grid-cols-' + parameters.columnsCount,
    ]"
>
    <PageBuilderComponent
        v-for="component in children"
        :key="component.id"
        :component="component"
        :class="{
            'col-span-1': component.name !== 'grid_element',
        }"
    />
</div>
{% endverbatim %}
