{#
This is the default template used when no other template exists or when homepage isn't defined.
#}

{% extends N9_base_template() %}

{% block body %}
    <div class="container standard-container">
        <div class="grid grid-cols-4 gap-5 w-full">
            <main class="blog-main col-span-3">
                {% if entities|length > 0 %}
                    {% for post in entities %}
                        {{ N9_component('Post/PostCard', {post: post}) }}
                    {% endfor %}
                    {{ N9_shortcode('[pagination]') }}
                {% else %}
                    <h2>Blog is empty!</h2>
                    <p>This blog hasn't any article at the moment.</p>
                {% endif %}
            </main>
            <aside class="blog-sidebar">
                {{ N9_area('blog_sidebar') }}
            </aside>
        </div>
    </div>
{% endblock %}
